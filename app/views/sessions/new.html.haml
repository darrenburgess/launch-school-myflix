%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: login_path, class: 'sign_in', layout: :horizontal do |f|
        %header
          %h1 Sign In
        = f.email_field :email, value: 'name@example.com'
        = f.password_field :password
        = f.submit


      -#%form.sign_in
        -#%header
          -#%h1 Sign in
        -#%fieldset
          -#.form-group
            -#%label Email Address
            -#.row
              -#.col-sm-4
                -#%input.form-control(type="email")
          -#.form-group
            -#%label Password
            -#.row
              -#.col-sm-4
                -#%input.form-control(type="password")
        -#%fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
